#!/bin/sh
# Run verification before pushing
set -euo pipefail

REPO_ROOT="$(git rev-parse --show-toplevel)"
cd "$REPO_ROOT"

if ! command -v pnpm >/dev/null 2>&1; then
  echo "pnpm is required for git hooks but was not found. Install pnpm and retry." >&2
  exit 1
fi

echo "[pre-push] Running lint (pnpm lint)..."
pnpm lint

echo "[pre-push] Running test suite (pnpm test)..."
pnpm test
