{
  "name": "bemind-dev-tools",
  "version": "1.0.0",
  "description": "Bemind Dev Tools - Unified development tools platform",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently -n \"main,renderer,electron\" -c \"blue,green,yellow\" \"pnpm run dev:main\" \"pnpm run dev:renderer\" \"pnpm run dev:electron\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "dev:electron": "wait-on dist/main/main.js http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "pnpm run build:main && pnpm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "package": "pnpm run build && electron-builder",
    "package:mac": "pnpm run build && electron-builder --mac",
    "package:win": "pnpm run build && electron-builder --win",
    "package:linux": "pnpm run build && electron-builder --linux",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist out build *.log",
    "clean:all": "pnpm run clean && rm -rf node_modules pnpm-lock.yaml"
  },
  "keywords": [
    "electron",
    "ports",
    "development",
    "tools"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-window": "^1.8.8",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^4.0.10",
    "concurrently": "^8.2.0",
    "cross-env": "^10.1.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.9.0",
    "electron-reload": "^2.0.0-alpha.1",
    "fast-check": "^4.3.0",
    "jsdom": "^27.2.0",
    "typescript": "^5.3.0",
    "vite": "^7.2.2",
    "vitest": "^4.0.10",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-window": "^2.2.3"
  }
}
